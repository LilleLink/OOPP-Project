<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <cursor>
      <Cursor fx:constant="TEXT" />
   </cursor>
   <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <TextField fx:id="textField" prefWidth="150.0" promptText="Type something..." HBox.hgrow="ALWAYS" />
      <Button fx:id="searchButton" mnemonicParsing="false" text="Search" />
   </HBox>
</fx:root>
